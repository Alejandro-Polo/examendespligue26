{% extends 'base.html.twig' %}

{% block title %}Articulo index{% endblock %}

{% block body %}
    <h1>Articulo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Foto</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Valoracion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for articulo in articulos %}
            <tr>
                <td>{{ articulo.id }}</td>
                <td>{{ articulo.nombre }}</td>
                <td><img src="{{ articulo.foto }}" alt="{{ articulo.nombre }}"></td>
                <td>{{ articulo.descripcion }}</td>
                <td>{{ articulo.precio }}</td>
                <td>{{ articulo.valoracion }}</td>
                <td>
                    <a href="{{ path('app_articulo_show', {'id': articulo.id}) }}">show</a>
                    <a href="{{ path('app_articulo_edit', {'id': articulo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_articulo_new') }}">Create new</a>
{% endblock %}
